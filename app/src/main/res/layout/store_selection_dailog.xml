<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="@string/select_a_store"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStoreA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:background="@drawable/bg_selected"
                android:fontFamily="serif"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_30dp"
                android:paddingTop="@dimen/dimen_16dp"
                android:paddingRight="@dimen/dimen_30dp"
                android:paddingBottom="@dimen/dimen_16dp"
                android:text="Store A"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/tvStoreB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_unselected"
                android:fontFamily="serif"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_30dp"
                android:paddingTop="@dimen/dimen_16dp"
                android:paddingRight="@dimen/dimen_30dp"
                android:paddingBottom="@dimen/dimen_16dp"
                android:text="Store B"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/btn_layout" />
</RelativeLayout>